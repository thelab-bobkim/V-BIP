# V-BIP 2.3 환경 설정 예제
# 실제 배포시에는 .env 파일을 생성하고 아래 값들을 수정하세요

# PostgreSQL 데이터베이스 설정
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=vbip
POSTGRES_USER=vbip_user
POSTGRES_PASSWORD=vbip_password_2024

# Flask 설정
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production

# OpenAI API (선택사항 - AI 분류 사용시)
OPENAI_API_KEY=sk-your-openai-api-key-here

# 애플리케이션 설정
APP_PORT=5000
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# 로그 설정
LOG_LEVEL=INFO
LOG_FILE=/app/logs/vbip.log

# AWS Lightsail 배포 설정 (프로덕션)
DOMAIN_NAME=your-domain.com
SSL_ENABLED=true
