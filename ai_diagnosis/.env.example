# ============================================
# V-BIP Phase 3-B: AI Diagnosis Configuration
# ============================================

# ============================================
# OpenAI Configuration (Required)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000

# ============================================
# Vector Database Selection
# ============================================
# Option 1: ChromaDB (Local, Recommended for start)
USE_PINECONE=false
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=netbackup_troubleshooting

# Option 2: Pinecone (Cloud, for production)
# USE_PINECONE=true
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-east-1-aws
# PINECONE_INDEX_NAME=vbip-netbackup-kb

# ============================================
# Embedding Configuration
# ============================================
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072

# ============================================
# Knowledge Base Configuration
# ============================================
KNOWLEDGE_BASE_DIR=./knowledge_base
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ============================================
# Diagnosis Configuration
# ============================================
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# ============================================
# Phase 3-A Integration (from email_automation/.env)
# ============================================
# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=veritas_monitor
DB_USER=vbip_user
DB_PASSWORD=your_db_password

# Email
VERITAS_EMAIL=your-email@gmail.com
VERITAS_EMAIL_PASSWORD=your-app-password

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ENABLED=true

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/ai_diagnosis.log
